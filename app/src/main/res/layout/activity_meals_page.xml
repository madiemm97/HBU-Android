<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc3333"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Meals"
            android:textColor="#ffffff"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_____________________________"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How many meals did you eat today?"
            android:textSize="30sp"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mealNumOne"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumOnePressed"
                        android:text="1" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumFour"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumFourPressed"
                        android:text="4" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumSeven"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumSevenPressed"
                        android:text="7" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mealNumTwo"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumTwoPressed"
                        android:text="2" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumFive"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumFivePressed"
                        android:text="5" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumEight"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumEightPressed"
                        android:text="8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mealNumThree"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumThreePressed"
                        android:text="3" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumSix"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumSixPressed"
                        android:text="6" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/mealNumNine"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mealNumNinePressed"
                        android:text="9" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onSubmitButtonPressed"
                        android:text="Next" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>